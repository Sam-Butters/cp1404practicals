BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: ''
            font_size: 48

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
#                on_press: app.handle_up()
                on_press: app.handle_increment(+1)
            Button:
                text: 'Down'
#                on_press: app.handle_down()
                on_press: app.handle_increment(-1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion()
    Label:
        id: output_label